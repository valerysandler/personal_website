---
import ProjectSlider from '~/components/ProjectSlider.astro';

const { projects = [] } = Astro.props;
---

<section class="grid md:grid-cols-2 gap-8">
  {projects.map((project) => (
    <article class="bg-white dark:bg-gray-900 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition">
      <ProjectSlider client:load images={project.images} title={project.title} />
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-2">{project.title}</h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">{project.description}</p>
      </div>
    </article>
  ))}
</section>
